<Window x:Class="KP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KP"
        mc:Ignorable="d"
        Title="" Height="400" Width="400" WindowStartupLocation="CenterScreen" Background="#EFE2CC">
    <Border Background="#EC7272" CornerRadius="10" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Логин" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Логин" Foreground="White"/>
            <TextBox Name="TextBoxLogin" Background="#EFE2CC" Foreground="#616A79" FontSize="18" MaxLength="20"/>
            <Label Content="Пароль" Foreground="White"/>
            <PasswordBox Name="TextPasswordBox" Background="#EFE2CC" Foreground="#616A79" FontSize="18" MaxLength="20"/>
            
            <Button  x:Name="EnterButton" Click="ButtonEnter_Click" Content="Вход" Margin="60,25,59.6,0" Background="#EFE2CC" Foreground="#616A79" FontSize="18"/>
            <Button Name="RegistrationButton" Content="Регистрация" Click="ButtonReg_Click" Margin="60, 20,59.6,10" Background="#EFE2CC" Foreground="#616A79" FontSize="18" Height="28"/>
        </StackPanel>
    </Border>
</Window>
