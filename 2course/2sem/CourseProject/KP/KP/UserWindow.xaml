<Window x:Class="KP.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KP"
        mc:Ignorable="d"
        Title="UserWindow" Height="350" Width="300" WindowStartupLocation="CenterScreen" Background="#EFE2CC">
    
    <Border Background="#EC7272" CornerRadius="10" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Сотрудник кафе" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Button Content="Меню" Click="ButtonMenuClick"  Margin="30,10,30,10" Background="#EFE2CC" Foreground="#616A79" FontSize="18"/>
            <Button Content="Склад" Click="ButtonStockClick"  Margin="30,10,30,10" Background="#EFE2CC" Foreground="#616A79" FontSize="18"/>
            <Button Content="Заказ" Click="ButtonOrderClick" Margin="30,10,30,10" Background="#EFE2CC" Foreground="#616A79" FontSize="18"/>
            <Button Content="Выход" Click="ButtonBackClick" Margin="30,10,30, 30" Background="#EFE2CC" Foreground="#616A79" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
